@model List<Comment>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_MemberLayout.cshtml";
    int count = 0;
}

<h1>Yorum Listesi</h1>

<table class="table table-bordered">
    <tr>
        <th>#</th>
        
        <th>Blog</th>
        <th>Yorum İçeriği</th>
        <th>Tarih</th>
        <th>Sil</th>

    </tr>
    @foreach (var item in Model)
    {
        count++;
        <tr>
                <td>@count</td>
                <td>@item.Destination.City</td>
                <td>@item.CommentContent</td>
                <td>@(((DateTime)item.CommentDate).ToString("dd-MMM-yyyy"))</td>
                <td><a href="/Member/Comment/DeleteComment/@item.CommentID" class="btn btn-outline-danger">Sil</a></td>
            </tr>
    }
</table>

