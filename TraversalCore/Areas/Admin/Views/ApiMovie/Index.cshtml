@model List<ApiMovieViewModel>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<h1>Api IMDB Top 100 Film Listesi</h1>
<table class="table table-striped">
    <tr>
        <th class="text-center">#</th>
        <th class="text-center">Görsel</th>
        <th class="text-center">Film Adı</th>
        <th class="text-center">Puanı</th>
        <th class="text-center">Çıkış Yılı</th>
        
    </tr>
    @foreach (var item in Model)
    {
        <tr>
        <td>@item.rank</td>
        <td><img class="rounded" src="@item.image[0][1]" width="100" height="150" /></td>
        <td class="text-center" style="zoom: 90%;"><b>@item.title</b></td> 
        <td>@item.rating</td>
        <td>@item.year</td>
   </tr>
    }
</table>
